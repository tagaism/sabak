%nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  .container-fluid
    %a.navbar-brand{:href => "#"}
      Sabakta
    %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarSupportedContent", "data-bs-toggle" => "collapse", :type => "button"}
      %span.navbar-toggler-icon
    #navbarSupportedContent.collapse.navbar-collapse
      - if current_user
        %ul.navbar-nav.me-auto
          %li.nav-item
            = link_to root_path, class: "nav-link #{'active font-weight-bold' if current_page?(root_path)}" do
              .fa.fa-home
              Home
          %li.nav-item
            = link_to courses_path, class: "nav-link #{'active font-weight-bold' if current_page?(courses_path)}" do
              .fa.fa-book
              Courses
          %li.nav-item
            = link_to new_course_path, class: "nav-link #{'active font-weight-bold' if current_page?(new_course_path)}" do
              .fa.fa-plus
              New courses
        %ul.navbar-nav.me-left
          = form_tag(courses_path, method: :get) do
            .input-group
              = text_field_tag :title, params[:title], autocomplete: 'off', placeholder: "Search", class: 'form-control-sm'
              %span.input-group-append
                %button.btn.btn-primary.btn-sm{:type => "submit"}
                  %span.fa.fa-search{"area-hidden" => "true"}
          %li.nav-item.dropdown
            %a#navbarDropdown.nav-link.dropdown-toggle{"aria-expanded" => "false", "data-bs-toggle" => "dropdown", :href => "#", :role => "button"}
              .fa.fa-user
              %b= current_user.email
            %ul.dropdown-menu{"aria-labelledby" => "navbarDropdown"}
              %li
                =link_to edit_user_registration_path, class: 'dropdown-item' do
                  .fa.fa-cog
                  Account settings
              %li
                =link_to destroy_user_session_path, class: 'dropdown-item', method: :delete do
                  .fa.fa-cog
                  Sign out
      - else
        %ul.navbar-nav
          %li.nav_item= link_to 'Register', new_user_registration_path, class: 'nav-link'
          %li.nav_item= link_to 'Login', new_user_session_path, class: 'nav-link'
